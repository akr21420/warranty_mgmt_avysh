<style>
    

    table,
    tr,
    td {

        width: 80%;
        font-size: 18px;

        border-collapse: collapse;
        border: 3px solid purple;
        font-family: 'Rock Salt', cursive;
        color: rgb(39, 15, 15);
        text-shadow: 1px 1px 1px black;
    }

    tr,
    td {
        padding: 10px;
        text-align: center
    }

    ul {
        list-style-type: "â†’";
    }

    .container {
        background: #fff !important;
        border: none;
        border-radius: none;
        box-shadow: rgb(158, 92, 92) 3px 3px 6px 0px inset, rgba(153, 8, 8, 0.5) -3px -3px 6px 1px inset;
    }

    .abc {
        padding-left: 40px;
        text-shadow: 1px 1px 2px red, 0 0 1em rgb(85, 85, 143), 0 0 0.2em blue;
    }

    .pqr {
        padding-right: 70px;
        padding-top: 14px
    }

    .para {
        float: right;
        margin-right: 0;
        padding-left: 80%;
        top: 0
    }



    li {
        font-size: 16px;
        line-height: 40px;
        color: rgba(145, 33, 33, 0.836);

        text-shadow: 1px 1px 1px maroon;

    }

    li:hover {
        font-size: 19px;
        color: red;
    }

    .col-md-2 {
        padding-bottom: 20px;
        font-weight: bold
    }

    .col-md-2 a {
        text-decoration: none;
        color: #000
    }

    .col-md-2.mio {
        font-size: 12px;
        padding-top: 7px
    }

    .des::after {
        content: '.';
        font-size: 0;
        display: block;
        border-radius: 20px;
        height: 6px;
        width: 55%;
        background: yellow;
        margin: 14px 0
    }

    .r4 {
        padding-left: 25px
    }

    .btn-outline-warning {
        border-radius: 0;
        border: 2px solid yellow;
        color: #000;
        font-size: 12px;
        font-weight: bold;
        width: 70%
    }

    a.button6 {
        display: inline-block;
        padding: 0.7em 1.4em;
        margin: 0 0.3em 0.3em 0;
        border-radius: 0.15em;
        box-sizing: border-box;
        text-decoration: none;
        font-family: 'Roboto', sans-serif;
        text-transform: uppercase;
        font-weight: 400;
        color: #FFFFFF;
        background-color: #34c488;
        box-shadow: inset 0 -0.6em 0 -0.35em rgba(0, 0, 0, 0.17);
        text-align: center;
        position: relative;
    }

    a.button6:hover {
        top: 0.1em;
        box-shadow: 5px 3px 10px darkgreen;
    }

    @media all and (max-width:30em) {
        a.button6 {
            display: block;
            margin: 0.4em auto;
        }
    }

    @media screen and (max-width: 620px) {
        .container {
            width: 98%;
            display: flex;
            flex-flow: column;
            text-align: center
        }

        .des::after {
            content: '.';
            font-size: 0;
            display: block;
            border-radius: 20px;
            height: 6px;
            width: 35%;
            background: yellow;
            margin: 10px auto
        }

        .pqr {
            text-align: center;
            margin: 0 30px
        }

        .para {
            text-align: center;
            padding-left: 90px;
            padding-top: 10px
        }

        .klo {
            display: flex;
            text-align: center;
            margin: 0 auto;
        }


    }
</style>

<div class="container py-5 my-5 mx-auto d-flex flex-column">
    <div class="header">
        <div class="row r1">
            <div class="col-md-10  text-center">
                <h1 class="abc">{{det.name}}</h1>
                <h3 style="color:rgb(50, 87, 155);font-family: 'Rock Salt', cursive;">Rs. {{det.price}}</h3>
            </div>

        </div>
    </div>
    <div class="container-body mt-4 py-3 ">
        <div class="row r3">
            <div class="col-md-6 p-0 klo">
                <div class="row">
                    <div class="col-md-6">
                        <ul>

                            <li>Free Shipping</li>
                            <li>Easy Returns</li>
                            <li>Normal Delivery : 4-5 Days</li>
                            <li>Express Delivery : 2-3 Days</li>
                            <li>COD Available (All Over India)</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <p style="color:blue;margin:25px;font-size:20px;text-shadow: red 0 -2px;">WARRANTY DETAILS</p>
                        <table>
                            <tr>
                                <td>Duration</td>
                                <td>{{prod.duration.year}}Year
                                    {{#if prod.duration.month }}
                                    {{prod.duration.month}}month
                                    {{else}}


                                    {{/if}}
                                </td>
                            </tr>
                            <tr>
                                <td>Resolution</td>
                                <td>{{prod.resolution}}</td>
                            </tr>
                            <tr>
                                <td>Type</td>
                                <td>{{prod.type}}</td>
                            </tr>
                            {{#if prod.extendable}}
                            <tr>

                            <tr>
                                <td>Extendable Time</td>
                                <td>{{prod.extendDur.year}}Year
                                    {{#if prod.extendDur.month }}
                                    {{prod.extendDur.month}}month
                                    {{else}}


                                    {{/if}}
                                </td>
                            </tr>
                            </tr>
                            <tr>
                                <td>Extra Price</td>
                                {{#if prod.extendPrice}}
                                <td>Rs.{{prod.extendPrice}}</td>
                                {{else}}
                                <td> We'll do free of cost</td>
                                {{/if}}
                            </tr>
                            {{else}}
                            <tr>
                                <td style="color:red;text-align:center">NOTE</td>
                                <td style="color:red">Unextendable</td>
                            </tr>
                            {{/if}}
                        </table>
                    </div>
                </div>

            </div>
            <div class="col-md-5"> <img style="border-radius:20px;margin-left:29px"
                    src="http://localhost:3000/image/{{det.image}}"
                    width="90%" height="95%" /> </div>
        </div>
    </div>
    <div class="footer d-flex flex-column mt-5">
        <div class="row r4">


            <div class="col-md-2 myt ">

                <a href="#" class="button6">Shop-Now</a>

            </div>

        </div>
    </div>
