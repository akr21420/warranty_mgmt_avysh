<div
  class="d-flex justify-content-center align-items-center container"
  style="margin-top: 10%;"
>
  <div class="row">
    <center>
      <h1>Register</h1>
    </center>
    <form method="POST" class="form-signin" action="/users/register">
      <div class="form-group">
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          placeholder="Name"
          required
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="email"
          name="email"
          id="email"
          placeholder="Email"
          required
        />
      </div>

      <div class="form-group">
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          placeholder="Password"
          required
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="password"
          name="password2"
          id="password2"
          placeholder="Re-enter Password"
          required
        />
      </div>
      <button
        class="btn btn-lg btn-outline-primary btn-block angled-gradient-button"
        type="submit"
      >Submit</button>
      <p class="mt-5 mb-3 text-muted">Already have an account?
        <a href="/users/login">Login Here</a></p>
    </form>
  </div>
</div>